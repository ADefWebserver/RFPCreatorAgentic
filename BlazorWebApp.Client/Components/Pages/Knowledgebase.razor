@page "/knowledgebase"
@rendermode InteractiveWebAssembly

<PageTitle>Knowledgebase - RFP Responder</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div class="header-left">
            <h1 class="page-title">Knowledgebase</h1>
            <p class="page-subtitle">Manage your document repository for AI-powered responses.</p>
        </div>
        <RadzenButton Text="Upload Document"
                     Icon="upload_file"
                     ButtonStyle="ButtonStyle.Primary"
                     Click="TriggerUpload"
                     Disabled="@(!aiConfigured)" />
    </div>
    
    <InputFile OnChange="OnFileSelected" 
              accept=".pdf,.docx,.txt" 
              style="display: none;" 
              id="kbUploadInput" />

    @if (isProcessing)
    {
        <RadzenCard class="processing-card">
            <RadzenProgressBar Value="@progress.PercentComplete" ShowValue="true" Style="height: 24px;" />
            <p style="margin: 0.5rem 0 0; color: #64748b; font-size: 0.875rem;">@progress.Message</p>
        </RadzenCard>
    }

    @if (entries.Any())
    {
        <div class="kb-grid">
            @foreach (var entry in entries)
            {
                <RadzenCard class="kb-card">
                    <div class="kb-card-header">
                        <div class="kb-icon">
                            <RadzenIcon Icon="picture_as_pdf" Style="font-size: 1.5rem; color: #ef4444;" />
                        </div>
                        <div class="kb-info">
                            <span class="kb-name">@entry.FileName</span>
                            <span class="kb-meta">@entry.Chunks.Count chunks â€¢ @FormatFileSize(entry.FileSizeBytes)</span>
                        </div>
                        <RadzenButton Icon="delete" 
                                     ButtonStyle="ButtonStyle.Danger" 
                                     Variant="Variant.Text"
                                     Size="ButtonSize.Small"
                                     Click="@(() => DeleteEntry(entry.Id))" />
                    </div>
                    <div class="kb-card-footer">
                        <span class="kb-date">Added @entry.CreatedAt.ToString("MMM dd, yyyy")</span>
                    </div>
                </RadzenCard>
            }
        </div>
    }
    else
    {
        <RadzenCard class="empty-state-card">
            <div class="empty-state">
                <RadzenIcon Icon="menu_book" Style="font-size: 4rem; color: #cbd5e1; margin-bottom: 1rem;" />
                <h2>No Documents Yet</h2>
                <p>Upload PDF, DOCX, or TXT files to build your knowledgebase for AI-powered RFP responses.</p>
            </div>
        </RadzenCard>
    }
</div>

