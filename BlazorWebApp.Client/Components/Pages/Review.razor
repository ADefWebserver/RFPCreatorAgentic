@page "/review"
@rendermode InteractiveWebAssembly

<PageTitle>Review and Edit RFP Answers - RFP Responder</PageTitle>

<div class="page-container">
    @* Breadcrumb *@
    <div class="breadcrumb">
        <a href="/">Dashboard</a>
        <span class="separator">/</span>
        <span>@projectName</span>
        <span class="separator">/</span>
        <span class="current">Review</span>
    </div>

    @* Page Header *@
    <div class="page-header">
        <div class="header-left">
            <h1 class="page-title">Review and Edit RFP Answers</h1>
            <div class="header-badges">
                <RadzenBadge Text="Analysis Complete" BadgeStyle="BadgeStyle.Success" />
                <span class="question-count">@questions.Count Questions Detected</span>
            </div>
            <p class="page-subtitle">
                Review the AI-generated answers below. Edit the text directly to refine the proposal before finalizing.
            </p>
        </div>
        <div class="header-actions">
            <RadzenButton Text="Export PDF" 
                         Icon="picture_as_pdf" 
                         ButtonStyle="ButtonStyle.Light" 
                         Variant="Variant.Outlined" />
            <RadzenButton Text="Share" 
                         Icon="share" 
                         ButtonStyle="ButtonStyle.Light" 
                         Variant="Variant.Outlined" />
        </div>
    </div>

    @* Questions and Answers List *@
    <div class="qa-container">
        <div class="qa-header-row">
            <div class="qa-header-question">DETECTED QUESTION</div>
            <div class="qa-header-answer">PROPOSED ANSWER</div>
        </div>

        @foreach (var question in questions)
        {
            <div class="qa-row @(question.ConfidenceScore < 0.5 ? "low-confidence" : "")">
                <div class="qa-question">
                    <div class="question-number">@question.Index</div>
                    <div class="question-text">@question.QuestionText</div>
                </div>
                <div class="qa-answer">
                    @if (question.ConfidenceScore < 0.5)
                    {
                        <div class="low-confidence-warning">
                            <RadzenIcon Icon="warning" Style="color: #f59e0b;" />
                            <span>AI could not generate a confident answer based on your knowledge base. Please draft your response here.</span>
                        </div>
                    }
                    <div class="answer-content">
                        <RadzenTextArea @bind-Value="question.EditedAnswer"
                                       Placeholder="@(string.IsNullOrEmpty(question.GeneratedAnswer) ? "Enter your response here..." : question.GeneratedAnswer)"
                                       Rows="5"
                                       Style="width: 100%; border: none; background: transparent; resize: vertical;" />
                        <div class="answer-actions">
                            <RadzenButton Icon="auto_fix_high" 
                                         ButtonStyle="ButtonStyle.Light" 
                                         Variant="Variant.Text"
                                         Size="ButtonSize.Small"
                                         title="AI Enhance" />
                        </div>
                    </div>
                    <div class="answer-footer">
                        <span class="confidence-score">
                            Confidence Score: 
                            <strong class="@GetConfidenceClass(question.ConfidenceScore)">
                                @(question.ConfidenceScore * 100):0%
                            </strong>
                        </span>
                    </div>
                </div>
            </div>
        }

        @if (questions.Count > displayedCount)
        {
            <div class="show-more">
                <RadzenButton Text="@($"Show {Math.Min(10, questions.Count - displayedCount)} more questions")"
                             Icon="expand_more"
                             ButtonStyle="ButtonStyle.Light"
                             Variant="Variant.Text"
                             Click="ShowMoreQuestions" />
            </div>
        }
    </div>

    @* Footer Actions *@
    <div class="footer-container">
        <div class="footer-left">
            <div class="auto-save-status @(isSaving ? "saving" : "saved")">
                @if (isSaving)
                {
                    <div class="save-spinner"></div>
                    <span>Saving...</span>
                }
                else
                {
                    <RadzenIcon Icon="check_circle" Style="color: #22c55e;" />
                    <span>All changes auto-saved @lastSaveTime</span>
                }
            </div>
            
            @if (lowConfidenceCount > 0)
            {
                <div class="warning-indicator">
                    <RadzenIcon Icon="warning" Style="color: #f59e0b;" />
                    <span>@lowConfidenceCount Low Confidence / Missing Data</span>
                </div>
            }
        </div>
        
        <div class="footer-actions">
            <RadzenButton Text="Save Draft" 
                         ButtonStyle="ButtonStyle.Light" 
                         Variant="Variant.Outlined"
                         Click="SaveDraft" />
            <RadzenButton Text="Create RFP Response" 
                         Icon="arrow_forward"
                         ButtonStyle="ButtonStyle.Primary"
                         Click="CreateRfpResponse" />
        </div>
    </div>
</div>

