        font-size: 0.875rem;
        color: #f59e0b;
    }
    
    .footer-actions {
        display: flex;
        gap: 0.75rem;
    }
    
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
    
    /* Responsive */
    @@media (max-width: 1024px) {
        .qa-header-row,
        .qa-row {
            grid-template-columns: 1fr;
        }
        
        .qa-question {
